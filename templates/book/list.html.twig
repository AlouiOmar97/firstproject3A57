{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<h1> Book List </h1>
<a href="{{path('app_book_new')}}">Add Book</a>
<div>
{% for book in books %}
{% if book.enabled %}
<img src="{{ asset(book.author.picture) }}" alt="{{book.author.username}}" height="150px" />
<p><b>Title : <b/> {{ book.title }} </p>
<p><b>Publication Date : <b/> {{ book.publicationDate | date('d/m/Y') }} </p>
<p><b>Published : <b/> {{ book.enabled ? 'Yes' : 'No' }} </p>
<p><b>Author : <b/> <a href="{{path('app_author_details',{id: book.author.id})}}">{{ book.author.username }}</a> </p>
<a href="{{path('app_book_details', { id : book.id })}}">Details</a>
<a href="{{path('app_book_edit', { id : book.id })}}">Update</a>
<a href="{{path('app_book_delete', { id : book.id })}}">Delete</a>
<hr>
{% endif %}
{% else %}
<p>No Books found.</p>
{% endfor %}
</div>
{% endblock %}
